//! stage: fragment
//! requires: vec3 lit_color, float alpha
//! provides: vec4 final_color
//! block: Tonemapping binding=3 { float exposure; float gamma; }

// ACES filmic tonemapping
vec3 aces_tonemap(vec3 x) {
    const float a = 2.51;
    const float b = 0.03;
    const float c = 2.43;
    const float d = 0.59;
    const float e = 0.14;
    return clamp((x * (a * x + b)) / (x * (c * x + d) + e), 0.0, 1.0);
}

void output_hdr() {
    vec3 mapped = lit_color * exposure;
    mapped = aces_tonemap(mapped);
    mapped = pow(mapped, vec3(1.0 / gamma));
    final_color = vec4(mapped, alpha);
}
